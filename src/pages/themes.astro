---
import Base from '../layouts/Base.astro';
import Github from '../components/Github.astro';
import ScrollToTop from '../components/ScrollToTop.astro';
import { dataByTheme } from '../data/dataByTheme.js';

type CssEntry = {
  name: string;
  date: string;
  type: string;
  parent: string;
  mdnUrl: string | null;
  specUrl: string | string[] | null;
};

type ThemeGroup = {
  group: string;
  items: CssEntry[];
  slug: string;
};

const slugify = (value: string) =>
  value
    .toLowerCase()
    .replace(/[^\p{L}\p{N}]+/gu, '-')
    .replace(/(^-|-$)/g, '');

const themes: ThemeGroup[] = Object.entries(dataByTheme).map(([group, items]) => ({
  group,
  items: items as CssEntry[],
  slug: slugify(group),
}));
---

<Base>
  <main class="main">
    <header class="intro">
      <h1>CSS свойства по темам</h1>
      <p>
        Мы сгруппировали все доступные в базе проекта CSS-свойства, селекторы, типы
        значений и связанные возможности по тематическим блокам. Это помогает быстрее
        ориентироваться в огромном списке возможностей, концентрируясь на интересующей
        области: скролл, layout, анимации, цвет и многое другое.
      </p>
    </header>

    <div class="themes">
      {themes.map((theme) => (
        <section class="theme" id={theme.slug}>
          <div class="theme-header">
            <h2>{theme.group}</h2>
            <span class="count">{theme.items.length}</span>
          </div>
          <ul class="properties">
            {theme.items.map((item) => {
              const primaryLink = Array.isArray(item.specUrl)
                ? item.specUrl[0]
                : item.specUrl ?? undefined;
              const link = item.mdnUrl ?? primaryLink;

              return (
                <li>
                  {link ? (
                    <a href={link} target="_blank" rel="noopener noreferrer">
                      {item.name}
                    </a>
                  ) : (
                    <span>{item.name}</span>
                  )}
                </li>
              );
            })}
          </ul>
        </section>
      ))}
    </div>
  </main>
  <Github />
  <ScrollToTop />
</Base>

<style>
  .main {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 2.5rem 1rem 4rem;
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .intro {
    background: var(--color-background-section);
    padding: 2rem;
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-md);
    backdrop-filter: blur(10px);
  }

  .intro h1 {
    margin: 0 0 1rem;
    font-size: clamp(2rem, 4vw, 2.75rem);
    color: var(--color-primary);
  }

  .intro p {
    margin: 0;
    color: var(--color-text-light);
    font-size: 1.05rem;
    line-height: 1.7;
  }

  .themes {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 1.5rem;
  }

  .theme {
    background: var(--color-background-item);
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-sm);
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    transition: transform var(--transition-normal), box-shadow var(--transition-normal);
  }

  .theme:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-md);
  }

  .theme-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: 1rem;
  }

  .theme-header h2 {
    margin: 0;
    font-size: 1.25rem;
    color: var(--color-text);
  }

  .count {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 2.5rem;
    padding: 0.25rem 0.75rem;
    border-radius: 999px;
    background: var(--color-primary);
    color: var(--color-text-white);
    font-size: 0.85rem;
    font-weight: 600;
  }

  .properties {
    list-style: none;
    margin: 0;
    padding: 0;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
    gap: 0.5rem;
  }

  .properties li {
    display: flex;
  }

  .properties a,
  .properties span {
    display: inline-flex;
    padding: 0.4rem 0.6rem;
    border-radius: var(--border-radius-sm);
    background: rgb(148 163 184 / 12%);
    color: var(--color-text);
    font-size: 0.9rem;
    text-decoration: none;
    transition: background var(--transition-fast), color var(--transition-fast),
      transform var(--transition-fast);
  }

  .properties a:hover {
    background: var(--color-background-button);
    color: var(--color-text-white);
    transform: translateY(-2px);
  }

  @media (width <= 768px) {
    .main {
      padding: 2rem 1rem 3rem;
      gap: 2.5rem;
    }

    .intro {
      padding: 1.5rem;
    }

    .properties {
      grid-template-columns: repeat(auto-fit, minmax(100px, 1fr));
    }
  }
</style>
