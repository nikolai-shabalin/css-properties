---
import {data} from '../data/data.js';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const generatedAt = new Date().toLocaleDateString(lang);
---

<header class="hero" id="hero">
  <h1 class="title">
    <span class="title-gradient">{t('hero.title')}</span>
    ✨
  </h1>
  <p class="subtitle">
    {t('hero.subtitle')}
  </p>
  <div class="stats">
    <div class="stat-item">
      <span class="stat-number">{Object.values(data).flat().length}</span>
      <span class="stat-label">{t('hero.properties')}</span>
    </div>
    <div class="stat-item">
      <span class="stat-number">{Object.keys(data).length}</span>
      <span class="stat-label">{t('hero.years')}</span>
    </div>
  </div>
  <p class="generated-date">
    {t('generated.at')}: {generatedAt}
  </p]>
</header>

<style>
  .hero {
    text-align: center;
    margin-bottom: 4rem;
    padding: 3rem 2rem;
    background: var(--color-background-overlay);
    border-radius: var(--border-radius-xl);
    backdrop-filter: blur(20px);
    border: 1px solid rgb(148 163 184 / 20%);
    box-shadow: var(--shadow-xl);
    position: relative;
    overflow: hidden;
  }

  .hero::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: conic-gradient(
      from 0deg at 50% 50%,
      transparent 0deg,
      rgb(79 70 229 / 3%) 60deg,
      transparent 120deg,
      rgb(14 165 233 / 3%) 180deg,
      transparent 240deg,
      rgb(245 158 11 / 2%) 300deg,
      transparent 360deg
    );
    pointer-events: none;
  }


  .title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 700;
    margin: 0 0 1rem;
    line-height: 1.1;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .title-gradient {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
    background-clip: text;
    -webkit-text-fill-color: transparent;
    text-shadow: var(--shadow-glow);
  }

  .subtitle {
    font-size: 1.25rem;
    color: var(--color-text-light);
    margin: 0 0 2rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.6;
  }

  .stats {
    display: flex;
    justify-content: center;
    gap: 3rem;
    flex-wrap: wrap;
  }

  .stat-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  .stat-number {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--color-primary);
    line-height: 1;
  }

  .stat-label {
    font-size: 0.9rem;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-weight: 500;
  }

  .generated-date {
    margin-top: 1.5rem;
    margin-bottom: 0;
    font-size: 0.95rem;
    color: var(--color-text-muted);
    text-align: center;
  }

  /* Темная тема */
  @media (prefers-color-scheme: dark) {
    .hero {
      border: 1px solid rgb(71 85 105 / 30%);
    }
  }

  /* Адаптивность */
  @media (width <= 768px) {
    .hero {
      margin-bottom: 2rem;
      padding: 2rem 1rem;
    }

    .title {
      font-size: 2.5rem;
    }

    .subtitle {
      font-size: 1.1rem;
    }

    .stats {
      gap: 2rem;
    }

    .stat-number {
      font-size: 2rem;
    }
  }
</style>
