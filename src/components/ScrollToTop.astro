---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="scroll-to-top-fab">
  <a href="#hero" class="scroll-to-top-button" aria-label={t('scroll.top')}>
    <span class="scroll-icon">⬆️</span>
    <span class="scroll-text">{t('scroll.top')}</span>
  </a>
</div>

<style>
  .scroll-to-top-fab {
    position: sticky;
    bottom: 2rem;
    left: 2rem;
    z-index: 1000;
    animation: float 3s ease-in-out infinite;
    margin-top: 110vh;
    width: fit-content;
  }

  .scroll-to-top-button {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    background: var(--color-accent);
    color: var(--color-text-white);
    padding: 1rem 1.5rem;
    border-radius: var(--border-radius-xl);
    font-weight: 600;
    font-size: 0.875rem;
    cursor: pointer;
    box-shadow: var(--shadow-xl);
    transition: transform var(--transition-normal), box-shadow var(--transition-normal), background var(--transition-normal);
    border: 1px solid rgb(148 163 184 / 20%);
    backdrop-filter: blur(20px);
    position: relative;
    overflow: hidden;
    font-family: Inter, sans-serif;
    text-decoration: none;
  }

  .scroll-to-top-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgb(255 255 255 / 20%), transparent);
    transition: left var(--transition-normal);
  }

  .scroll-to-top-button:hover {
    transform: translateY(-4px) scale(1.05);
    box-shadow: var(--shadow-xl), 0 0 30px rgb(245 158 11 / 30%);
    background: #d97706;
  }

  .scroll-to-top-button:hover::before {
    left: 100%;
  }

  .scroll-to-top-button:active {
    transform: translateY(-2px) scale(1.02);
  }

  .scroll-icon {
    font-size: 1.25rem;
    flex-shrink: 0;
  }

  .scroll-text {
    letter-spacing: 0.025em;
    white-space: nowrap;
  }

  /* Темная тема */
  @media (prefers-color-scheme: dark) {
    .scroll-to-top-button {
      border: 1px solid rgb(71 85 105 / 30%);
    }

    .scroll-to-top-button:hover {
      box-shadow: var(--shadow-xl), 0 0 30px rgb(245 158 11 / 40%);
    }
  }

  /* Адаптивность */
  @media (width <= 768px) {
    .scroll-to-top-fab {
      bottom: 1rem;
      left: 1rem;
    }

    .scroll-to-top-button {
      padding: 0.75rem 1rem;
      font-size: 0.8rem;
      gap: 0.5rem;
    }

    .scroll-icon {
      font-size: 1.1rem;
    }
  }

  @media (width <= 480px) {
    .scroll-to-top-button {
      padding: 0.75rem;
      border-radius: 50%;
      width: 3.5rem;
      height: 3.5rem;
      justify-content: center;
    }

    .scroll-text {
      display: none;
    }

    .scroll-icon {
      font-size: 1.5rem;
    }
  }

</style>

