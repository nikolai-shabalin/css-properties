<div class="language-selector">
  <select id="language-select">
    {Object.entries(languages).map(([code]) => (
      <option value={code} selected={code === lang}>
        {languageMeta[code]?.flag} {languageMeta[code]?.code}
      </option>
    ))}
  </select>
</div>

<script define:vars={{ languagesJson }}>
  // ĞŸĞ¾Ğ»ÑƒÑ‡Ğ°ĞµĞ¼ ÑĞ·Ñ‹ĞºĞ¸ Ğ¸Ğ· ÑĞµÑ€Ğ²ĞµÑ€Ğ½Ğ¾Ğ³Ğ¾ ĞºĞ¾Ğ´Ğ°
  const languages = JSON.parse(languagesJson);

  document.addEventListener('DOMContentLoaded', function() {
    const select = document.getElementById('language-select');
    if (select) {
      select.addEventListener('change', function() {
        var lang = select.value;
        // Ğ˜ÑĞ¿Ğ¾Ğ»ÑŒĞ·ÑƒĞµĞ¼ Web API Ğ´Ğ»Ñ Ñ€Ğ°Ğ±Ğ¾Ñ‚Ñ‹ Ñ URL
        const url = new URL(window.location.href);
        const pathSegments = url.pathname.split('/').filter(Boolean);
        const allLangs = Object.keys(languages);

        // ĞĞ¿Ñ€ĞµĞ´ĞµĞ»ÑĞµĞ¼ Ğ±Ğ°Ğ·Ğ¾Ğ²Ñ‹Ğ¹ Ğ¿ÑƒÑ‚ÑŒ Ğ´Ğ¸Ğ½Ğ°Ğ¼Ğ¸Ñ‡ĞµÑĞºĞ¸
        let basePath = '';
        if (window.location.hostname === 'localhost' || window.location.hostname === '127.0.0.1') {
          // Ğ›Ğ¾ĞºĞ°Ğ»ÑŒĞ½Ğ°Ñ Ñ€Ğ°Ğ·Ñ€Ğ°Ğ±Ğ¾Ñ‚ĞºĞ°
          basePath = '';
        } else {
          // GitHub Pages
          basePath = '/css-properties';
        }

        // ĞĞ¿Ñ€ĞµĞ´ĞµĞ»ÑĞµĞ¼ Ñ‚ĞµĞºÑƒÑ‰Ğ¸Ğ¹ ÑĞ·Ñ‹Ğº Ğ¸Ğ· URL
        let currentLang = 'ru'; // Ğ¿Ğ¾ ÑƒĞ¼Ğ¾Ğ»Ñ‡Ğ°Ğ½Ğ¸Ñ
        let langIndex = -1;

        // Ğ˜Ñ‰ĞµĞ¼ ĞºĞ¾Ğ´ ÑĞ·Ñ‹ĞºĞ° Ğ² ÑĞµĞ³Ğ¼ĞµĞ½Ñ‚Ğ°Ñ… Ğ¿ÑƒÑ‚Ğ¸
        for (let i = 0; i < pathSegments.length; i++) {
          if (allLangs.includes(pathSegments[i])) {
            currentLang = pathSegments[i];
            langIndex = i;
            break;
          }
        }

        // Ğ¡Ğ¾Ğ·Ğ´Ğ°ĞµĞ¼ Ğ½Ğ¾Ğ²Ñ‹Ğ¹ URL
        const newUrl = new URL(window.location.href);

        // Ğ•ÑĞ»Ğ¸ Ğ²Ñ‹Ğ±Ñ€Ğ°Ğ½ Ñ€ÑƒÑÑĞºĞ¸Ğ¹ ÑĞ·Ñ‹Ğº
        if (lang === 'ru') {
          // Ğ£Ğ±Ğ¸Ñ€Ğ°ĞµĞ¼ ĞºĞ¾Ğ´ ÑĞ·Ñ‹ĞºĞ° Ğ¸Ğ· URL, ĞµÑĞ»Ğ¸ Ğ¾Ğ½ ĞµÑÑ‚ÑŒ
          if (langIndex !== -1) {
            pathSegments.splice(langIndex, 1);
          }
          // Ğ£Ğ±Ğ¸Ñ€Ğ°ĞµĞ¼ Ğ´ÑƒĞ±Ğ»Ğ¸Ñ€Ğ¾Ğ²Ğ°Ğ½Ğ¸Ğµ css-properties
          const filteredSegments = pathSegments.filter(segment => segment !== 'css-properties');
          const newPath = basePath + (filteredSegments.length > 0 ? '/' + filteredSegments.join('/') : '/');
          newUrl.pathname = newPath;
        } else {
          // Ğ”Ğ»Ñ Ğ´Ñ€ÑƒĞ³Ğ¸Ñ… ÑĞ·Ñ‹ĞºĞ¾Ğ² Ğ´Ğ¾Ğ±Ğ°Ğ²Ğ»ÑĞµĞ¼ Ğ¸Ğ»Ğ¸ Ğ·Ğ°Ğ¼ĞµĞ½ÑĞµĞ¼ ĞºĞ¾Ğ´ ÑĞ·Ñ‹ĞºĞ°
          if (langIndex === -1) {
            // Ğ•ÑĞ»Ğ¸ ÑĞµĞ¹Ñ‡Ğ°Ñ Ñ€ÑƒÑÑĞºĞ¸Ğ¹, Ğ´Ğ¾Ğ±Ğ°Ğ²Ğ»ÑĞµĞ¼ ĞºĞ¾Ğ´ ÑĞ·Ñ‹ĞºĞ° Ğ¿Ğ¾ÑĞ»Ğµ Ğ±Ğ°Ğ·Ğ¾Ğ²Ğ¾Ğ³Ğ¾ Ğ¿ÑƒÑ‚Ğ¸
            // Ğ£Ğ±Ğ¸Ñ€Ğ°ĞµĞ¼ Ğ´ÑƒĞ±Ğ»Ğ¸Ñ€Ğ¾Ğ²Ğ°Ğ½Ğ¸Ğµ css-properties
            const filteredSegments = pathSegments.filter(segment => segment !== 'css-properties');
            const newPath = basePath + '/' + lang + (filteredSegments.length > 0 ? '/' + filteredSegments.join('/') : '/');
            newUrl.pathname = newPath;
          } else {
            // Ğ•ÑĞ»Ğ¸ ÑƒĞ¶Ğµ ĞµÑÑ‚ÑŒ ĞºĞ¾Ğ´ ÑĞ·Ñ‹ĞºĞ°, Ğ·Ğ°Ğ¼ĞµĞ½ÑĞµĞ¼ ĞµĞ³Ğ¾
            pathSegments[langIndex] = lang;
            // Ğ£Ğ±Ğ¸Ñ€Ğ°ĞµĞ¼ Ğ´ÑƒĞ±Ğ»Ğ¸Ñ€Ğ¾Ğ²Ğ°Ğ½Ğ¸Ğµ css-properties
            const filteredSegments = pathSegments.filter(segment => segment !== 'css-properties');
            const newPath = basePath + '/' + filteredSegments.join('/');
            newUrl.pathname = newPath;
          }
        }

        window.location.href = newUrl.toString();
      });
    }
  });
</script>

