<style>
  .github-fab {
    position: fixed;
    bottom: 2rem;
    right: 2rem;
    z-index: 1000;
    animation: float 3s ease-in-out infinite;
  }
  
  .github-link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    background: var(--color-text);
    color: var(--color-background-item);
    padding: 1rem 1.5rem;
    border-radius: var(--border-radius-xl);
    text-decoration: none;
    font-weight: 600;
    font-size: 0.875rem;
    box-shadow: var(--shadow-xl);
    transition: transform var(--transition-normal), box-shadow var(--transition-normal), background var(--transition-normal);
    border: 1px solid rgb(148 163 184 / 20%);
    backdrop-filter: blur(20px);
    position: relative;
    overflow: hidden;
  }
  
  .github-link::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgb(255 255 255 / 10%), transparent);
    transition: left var(--transition-normal);
  }
  
  .github-link:hover {
    transform: translateY(-4px) scale(1.05);
    box-shadow: var(--shadow-xl), 0 0 30px rgb(0 0 0 / 20%);
  }
  
  .github-link:hover::before {
    left: 100%;
  }
  
  .github-link:active {
    transform: translateY(-2px) scale(1.02);
  }
  
  .github-icon {
    width: 1.5rem;
    height: 1.5rem;
    flex-shrink: 0;
  }
  
  .github-text {
    font-family: Inter, sans-serif;
    letter-spacing: 0.025em;
  }
  
  /* Темная тема */
  @media (prefers-color-scheme: dark) {
    .github-link {
      background: rgb(51 65 85 / 90%);
      color: var(--color-text);
      border: 1px solid rgb(71 85 105 / 30%);
    }
    
    .github-link:hover {
      background: rgb(71 85 105 / 90%);
      box-shadow: var(--shadow-xl), 0 0 30px rgb(79 70 229 / 30%);
    }
  }
  
  /* Адаптивность */
  @media (width <= 768px) {
    .github-fab {
      bottom: 1rem;
      right: 1rem;
    }
    
    .github-link {
      padding: 0.75rem 1rem;
      font-size: 0.8rem;
      gap: 0.5rem;
    }
    
    .github-icon {
      width: 1.25rem;
      height: 1.25rem;
    }
  }
  
  @media (width <= 480px) {    
    .github-link {
      padding: 0.5rem;
      border-radius: 50%;
      width: 3rem;
      height: 3rem;
      justify-content: center;
    }
    
    .github-text {
      display: none;
    }
    
    .github-icon {
      width: 1.5rem;
      height: 1.5rem;
    }
  }
</style>
